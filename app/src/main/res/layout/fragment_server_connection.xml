<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.ServerConnectionFragment">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:fontFamily="@font/philosopherbold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/server_list_header_rectangle"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAlignment="gravity"
            android:textColor="#FF4026"
            android:textSize="40sp" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="120dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:fontFamily="@font/bruno"
                    android:text="User Name:"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:fontFamily="@font/bruno"
                    android:id="@+id/user_name"
                    android:layout_width="90dp"
                    android:layout_height="24dp"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="Package Name:"
                    android:fontFamily="@font/bruno"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/package_name"
                    android:fontFamily="@font/bruno"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="ExpireAt:"
                    android:fontFamily="@font/bruno"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/expire_at"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/bruno"
                    android:textSize="12sp" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/disconnect"
            android:layout_width="90dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="158dp"
            android:layout_marginTop="421dp"
            android:gravity="top"
            android:text="Disconnect"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/server_ip"
            android:layout_width="89dp"
            android:layout_height="21dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="152dp"
            android:layout_marginTop="512dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="14sp" />

        <View

            android:id="@+id/gray_divide"
            android:layout_width="280dp"
            android:layout_height="488dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="198dp"
            android:background="@drawable/bangladesh_map" />

        <View
            android:id="@+id/ellipse_2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="353dp"
            android:background="@drawable/ellipse_2" />

        <View
            android:id="@+id/ellipse_1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="348dp"
            android:background="@drawable/ellipse_1" />
    </RelativeLayout>
</FrameLayout>